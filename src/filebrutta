  pastasciutte.map((pasta) => {
    return (
      // la i (secondo parametro
      // della funzione dentro map)
      // va utilizzata come "key" SOLO come ULTIMA SPIAGGIA
      <Carousel.Item key={pasta.id}>
        <img
          className="img-fluid"
          src={pasta.image}
          alt={"immagine di" + pasta.name}
        />
        <Carousel.Caption>
          <h3>{pasta.name}</h3>
          <p>{pasta.description}</p>
        </Carousel.Caption>
      </Carousel.Item>
    );
  });
}
