//generica

const fetchData = async () => {
  try {
    const response = await fetch("https://api.example.com/data");
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }
    const data = await response.json();
    console.log(data);
    // usa i dati come vuoi
  } catch (error) {
    console.error("Errore nella fetch:", error);
  }
};

//post

const fetchData = async () => {
  try {
    const payload = {
      key1: "value1",
      key2: "value2",
      // altri dati da inviare
    };

    const response = await fetch("https://api.example.com/data", {
      method: "POST", // specifica il metodo POST
      headers: {
        "Content-Type": "application/json", // indica che il corpo Ã¨ JSON
      },
      body: JSON.stringify(payload), // trasforma i dati in stringa JSON
    });

    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }

    const data = await response.json();
    console.log(data);
    // usa i dati come vuoi
  } catch (error) {
    console.error("Errore nella fetch:", error);
  }
};

